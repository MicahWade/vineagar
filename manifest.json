{
  "manifest_version": 3,
  "name": "Vinegar - Ethical Shopping Helper",
  "version": "1.0.0",
  "description": "Avoid monopolies and find ethical alternatives while you shop.",
  "browser_specific_settings": {
    "gecko": {
      "id": "vinegar@micahwade.com",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com.au/*",
    "*://*.walmart.com/*",
    "*://*.walmart.ca/*",
    "*://*.target.com/*",
    "*://*.costco.com/*",
    "*://*.costco.ca/*",
    "*://*.costco.co.uk/*",
    "*://*.costco.com.au/*",
    "*://*.woolworths.com.au/*",
    "*://*.coles.com.au/*",
    "*://*.aldi.com/*",
    "*://*.aldi.co.uk/*",
    "*://*.aldi.com.au/*",
    "*://*.aldi.us/*",
    "*://*.iga.com.au/*",
    "*://*.harrisfarm.com.au/*",
    "*://*.booths.co.uk/*",
    "*://*.tesco.com/*",
    "*://*.sainsburys.co.uk/*",
    "*://*.asda.com/*",
    "*://*.morrisons.com/*",
    "*://*.sobeys.com/*",
    "*://*.loblaws.ca/*",
    "*://*.nofrills.ca/*",
    "*://*.metro.ca/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["src/background/service-worker.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.com.au/*",
        "*://*.walmart.com/*",
        "*://*.walmart.ca/*",
        "*://*.target.com/*",
        "*://*.costco.com/*",
        "*://*.costco.ca/*",
        "*://*.costco.co.uk/*",
        "*://*.costco.com.au/*",
        "*://*.woolworths.com.au/*",
        "*://*.coles.com.au/*",
        "*://*.aldi.com/*",
        "*://*.aldi.co.uk/*",
        "*://*.aldi.com.au/*",
        "*://*.aldi.us/*",
        "*://*.iga.com.au/*",
        "*://*.harrisfarm.com.au/*",
        "*://*.booths.co.uk/*",
        "*://*.tesco.com/*",
        "*://*.sainsburys.co.uk/*",
        "*://*.asda.com/*",
        "*://*.morrisons.com/*",
        "*://*.sobeys.com/*",
        "*://*.loblaws.ca/*",
        "*://*.nofrills.ca/*",
        "*://*.metro.ca/*"
      ],
      "js": ["src/utils/brand_detector.js", "src/content/content_script.js"],
      "css": ["src/content/styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["data/companies.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
